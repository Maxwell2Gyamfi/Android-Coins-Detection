<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectedHistoryImage">

    <LinearLayout
        android:id="@+id/summaryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/selectedHistoryImage"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/stage_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_text"
            android:layout_weight="0.5"
            android:textColor="@color/custom_blue"
            android:textSize="40sp"></TextView>

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="returnHome"
            android:tint="@color/custom_blue"
            android:layout_marginTop="8dp"
            android:contentDescription="Home"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/selectedHistoryImage"
        android:layout_width="408dp"
        android:layout_height="582dp"
        app:layout_constraintBottom_toTopOf="@id/detectionInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summaryHeader"></ImageView>

    <LinearLayout
        android:id="@+id/detectionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/selectedHistoryImage">

        <TextView
            android:id="@+id/totalObjectsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@color/custom_blue"
            android:gravity="center"
            android:padding="10dp"
            android:text="Total: "
            android:textColor="#ffffff"
            android:textSize="12sp"></TextView>

        <TextView
            android:id="@+id/totalCountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:background="@color/custom_blue"
            android:text="Objects: "></TextView>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>